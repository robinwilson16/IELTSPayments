@page "{id:int?}"
@model IELTSPayments.Pages.Transactions.UpdateStatusModel

@{
    ViewData["Title"] = "UpdateStatus";
}

<h1>UpdateStatus</h1>

<h4>IELTSTransaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IELTSTransaction.TransactionID" class="control-label"></label>
                <input asp-for="IELTSTransaction.TransactionID" class="form-control" />
                <span asp-validation-for="IELTSTransaction.TransactionID" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IELTSTransaction.BookSent" /> @Html.DisplayNameFor(model => model.IELTSTransaction.BookSent)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IELTSTransaction.DVDSent" /> @Html.DisplayNameFor(model => model.IELTSTransaction.DVDSent)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
